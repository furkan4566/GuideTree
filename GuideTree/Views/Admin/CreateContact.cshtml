@model ContactModel
<style>
    body{
        background-color: rgb(236, 236, 236);
    }
</style>
<div id="contact-div" class="container">
    <h1 class="text-center mb-4">İletişim</h1>
    <div class="row">
        <div class="col-4">
            <div id="context-inputs">
                <form asp-controller="Admin" asp-action="CreateContact" method="POST">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="FirstLastName"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="FirstLastName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Subject"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Subject">
                        </div>
                    </div>
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <label class=" col-form-label" asp-for="Description"></label>
                <div class="col-sm-10">
                    <input id="contact-input-message" class="form-control" asp-for="Description">
                </div>
            </div>
        </div>
    </div>
</div>
<div id="contact-setting">
</div>