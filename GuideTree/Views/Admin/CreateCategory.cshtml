@model CategoryModel
<h1 class="h3">Create Category</h1>
<hr>

<form asp-controller="Admin" asp-action="CreateCategory" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Url"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Url">
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save Category</button>
        </div>
    </div>

</form>
@section Scripts
    {
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}